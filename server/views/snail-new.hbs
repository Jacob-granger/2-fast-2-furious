{{>header}}

<main class='page-box'>
  <img src='/snail.png' alt='The coolest snail on the block'>
  <form method='post' action='#'>

    <label>
      Image
      <input type='text' name='image'>
    </label>

    <label>
      Name
      <input type='text' name='name'>
    </label>

    <label>
      Top Speed
      <input type='number' name='topSpeed'>
    </label>

    <label>
      Engine Size
      <input type='number' name='engineSize'>
    </label>

    <label>
      Cool Factor
      <input type='number' name='coolFactor'>
    </label>

    <label>
      Innovation
      <input type='number' name='innovation'>
    </label>

    <label>
      Year Launched
      <input type='number' name='year'>
    </label>


    <button type='submit' class='btn'>Initialize</button>

  </form>

</main>